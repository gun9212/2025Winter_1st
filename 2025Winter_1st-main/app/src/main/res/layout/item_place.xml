<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <!-- 스와이프 시 보이는 배경 (아이템 뒤에 배치, 고정, 아이템과 같은 크기) -->
    <!-- 왼쪽 스와이프 배경 (상세정보) - 아이템이 왼쪽으로 이동하면 오른쪽에 드러남, 오른쪽에 글씨 배치 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/leftSwipeBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="gone"
        app:cardBackgroundColor="#FF9800"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:orientation="horizontal"
            android:paddingEnd="24dp"
            android:paddingStart="24dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상세정보"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:shadowColor="#80000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 오른쪽 스와이프 배경 (길찾기) - 아이템이 오른쪽으로 이동하면 왼쪽에 드러남, 왼쪽에 글씨 배치 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/rightSwipeBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="gone"
        app:cardBackgroundColor="#FF9800"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|start"
            android:orientation="horizontal"
            android:paddingStart="24dp"
            android:paddingEnd="24dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="길찾기"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:shadowColor="#80000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 실제 아이템 컨텐츠 (스와이프 배경 위에 배치, 스와이프 시 이동) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/itemCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/itemContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground">

            <!-- 음식점 이름 -->
            <TextView
                android:id="@+id/placeNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="음식점 이름"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <!-- 카테고리 -->
            <TextView
                android:id="@+id/categoryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="카테고리"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray" />

            <!-- 주소 -->
            <TextView
                android:id="@+id/addressText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="주소"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- 전화번호 및 거리 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/phoneText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="전화번호"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/distanceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="거리"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_orange_dark" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
