<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:paddingStart="48dp"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground">

    <!-- 체크박스 -->
    <CheckBox
        android:id="@+id/foodCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/primary_orange" />

    <!-- 음식 이미지 -->
    <ImageView
        android:id="@+id/foodImageView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="12dp"
        android:scaleType="centerCrop"
        android:background="@color/card_background_gray"
        android:contentDescription="Food image" />

    <!-- 음식 정보 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <!-- 음식 이름 (한글) -->
        <TextView
            android:id="@+id/foodNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="김치찌개"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary" />

        <!-- 음식 이름 (영문) 및 설명 -->
        <TextView
            android:id="@+id/foodDescriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kimchi Jjigae Kimchi stew with pork and tofu"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="4dp"
            android:maxLines="2"
            android:ellipsize="end" />
    </LinearLayout>
</LinearLayout>
