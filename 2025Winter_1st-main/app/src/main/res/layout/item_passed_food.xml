<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- 음식 이미지 -->
        <ImageView
            android:id="@+id/foodImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:background="@color/card_background_gray"
            android:contentDescription="Food image"
            tools:src="@drawable/ic_launcher_background" />

        <!-- 음식 정보 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical">

            <!-- 음식 이름 -->
            <TextView
                android:id="@+id/foodNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="김치찌개"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                tools:text="김치찌개" />

            <!-- 통과 표시 (선택사항) -->
            <TextView
                android:id="@+id/passedLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="통과"
                android:textSize="12sp"
                android:textColor="@color/like_button_color"
                android:layout_marginTop="4dp"
                android:background="@drawable/shape_button_outline"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                tools:text="통과" />
        </LinearLayout>

        <!-- 통과 아이콘 (선택사항) -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_like"
            android:layout_marginStart="8dp"
            android:contentDescription="Passed"
            app:tint="@color/like_button_color"
            tools:src="@drawable/ic_like" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
